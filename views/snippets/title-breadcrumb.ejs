<div class="page-info-topper">
    <div class="page-title-wrapper">
        <h1><%- breadcrumb.current_page %></h1>
    </div>
    <div class="breadcrumb-wrapper">
        <span class="home-page"><a href="<%- breadcrumb.home_page_url %>" class="home-page-anchor"><%- breadcrumb.home_page %></a></span>
        <span class="breadcrumb-divider">/</span>
        <% var bcCheck = helper.breadcrumbCheck(breadcrumb.current_page_url) %>
        <% if(bcCheck.test) { %>
            <span class="previous-page"><a href="<%- bcCheck.url %>" class="previous-page-anchor"><%- bcCheck.title %></a></span>
            <span class="breadcrumb-divider">/</span>
        <% } %>
        <span class="current-page"><a href="<%- breadcrumb.current_page_url %>" class="current-page-anchor"><%- breadcrumb.current_page %></a></span>
    </div>
</div>