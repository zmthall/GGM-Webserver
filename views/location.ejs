<main class="location-main-content">
    <%- include('./snippets/title-breadcrumb', { breadcrumb: config.pages.location.breadcrumb }) %>
    <section class="location-iframe-section">
        <div class="location-iframe-container">
            <iframe class="location-iframe" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3132.8586860038213!2d-104.62124542442707!3d38.25958338408619!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8713a2e6affcecd5%3A0x4813ffececbc5e40!2s648%20S%20Union%20Ave%2C%20Pueblo%2C%20CO%2081004!5e0!3m2!1sen!2sus!4v1716701406100!5m2!1sen!2sus" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </section>
    <section class="business-information-section">
        <div class="business-information-wrapper">
            <div class="contact-info-container content-information-container">
                <h2 class="content-title bolded-text">Contact Information</h2>
                <p class="content-text"><span class="bolded-text"><%- config.company.name %></span></p>
                <p class="content-text"><span class="bolded-text">Address: </span><%- config.company.address_transportation %></p>
                <p class="content-text"><%- config.company.adress_info %></p>
                <p class="content-text"><span class="bolded-text">Phone: </span><a href="<%- config.company.phone_number_nemt %>" class="primary-link"><%- config.company.phone_number_nemt_format %></a></p>
            </div>
            <div class="reservation-hours-container content-information-container">
                <h2 class="content-title bolded-text">Reservation Hours</h2>
                <p class="content-text reservation-days-hours">
                    <span class="bolded-text"><%- config.company.business_hours.days %></span>
                    <span><%- config.company.business_hours.hours %></span>
                </p>
            </div>
            <div class="get-connected-container content-information-container">
                <h2 class="content-title bolded-text">Get Connected</h2>
                <a href="<%- config.company.social.facebook.href %>" class="facebook-page-link">
                    <div class="social-logo-wrapper">
                        <%- include('./svg/facebook-logo') %>
                    </div>
                </a>
            </div>
        </div>
    </section>
</main>