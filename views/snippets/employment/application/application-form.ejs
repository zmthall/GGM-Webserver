<section class="application-page-section page-content">
    <div class="application-form-container">
        <form action="" method="post" enctype="multipart/form-data" class="application-form" id="contact-form" data-form-type="application">
            <section class="personal-form-section">
                <h2 class="form-title">Personal Information</h2>
                <div class="form-component-container selector">
                    <label for="position">Position</label>
                    <div class="select-wrapper">
                        <select name="position" id="position" data-select onfocus='if(window.innerWidth > 650) { this.size=10; this.parentNode.classList.add("hide-icon") }' onblur='this.size=1; this.parentNode.classList.remove("hide-icon")' onchange='this.size=1; this.blur();'>
                            <optgroup label="Transportation">
                                <option value="transportation_general" data-company="ggmt-cc" data-job-type="driver">Transportation - General</option>
                            </optgroup>
                            <optgroup label="City Cab Positions">
                                <option value="city_cab-dispatch" data-company="cc">Transportation Dispatcher</option>
                                <option value="city_cab-driver" data-company="cc" data-job-type="driver">Taxi Driver</option>
                                <option value="city_cab-admin_assistant" data-company="cc">Administrative Assistant</option>
                            </optgroup>
                            <optgroup label="NEMT Positions">
                                <option value="ggmt-csr" data-company="ggmt">Customer Service Representative</option>
                                <option value="ggmt-driver" data-company="ggmt" data-job-type="driver">NEMT Driver</option>
                            </optgroup>
                            <optgroup label="Assisted Living Positions">
                                <option value="al_general" data-company="acf">Assisted Living - General</option>
                                <option value="assisted_living-qmap" data-company="acf">QMAP</option>
                                <option value="assisted_living-pcp" data-company="acf">PCP</option>
                            </optgroup>
                            <optgroup label="Medical Supply Positions">
                                <option value="ms_general" data-company="ggms">Medical Supply - General</option>
                                <option value="medical_supply-dme_specialist" data-company="ggms">DME Specialist</option>
                                <option value="medical_supply-delivery_tech" data-company="ggms" data-job-type="driver">Delivery Technician</option>
                                <option value="medical_supply-inventory_tech" data-company="ggms" data-job-type="driver">Inventory Technician</option>
                            </optgroup>
                            <optgroup label="Gas Station Positions">
                                <option value="gs_general" data-company="ggmc" data-job-type="no-felony">Gas Station - General</option>
                                <option value="gas_station-manager" data-company="ggmc" data-job-type="no-felony">Gas Station Manager</option>
                                <option value="gas_station-asm" data-company="ggmc" data-job-type="no-felony">Gas Station Assistant Manager</option>
                                <option value="gas_station-attendant" data-company="ggmc" data-job-type="no-felony">Gas Station Attendant</option>
                            </optgroup>
                            <optgroup label="Other">
                                <option value="general" data-company="ggm" data-job-type="no-felony">General Application</option>
                            </optgroup>
                        </select>
                    </div>
                </div>
                <div class="form-component-container two-input">
                    <div class="input-two-container">
                        <label for="first_name">First Name</label>
                        <input type="text" name="first_name" id="first_name" required>
                    </div>
                    <div class="input-two-container">
                        <label for="last_name">Last Name</label>
                        <input type="text" name="last_name" id="last_name" required>
                    </div>
                </div>
                <div class="form-component-container one-input">
                    <div class="input-one-container">
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address" required>
                    </div>
                </div>
                <div class="form-component-container one-input">
                    <div class="input-half-container">
                        <label for="telephone">Phone Number</label>
                        <input type="text" name="telephone" id="telephone" required pattern="^[\(]?[0-9]{3}[\)\- ]?[0-9]{3}[\-]?[0-9]{4}$">
                    </div>
                </div>
                <div class="form-component-container radio-inputs">
                    <fieldset class="input-radio-container">
                        <legend>Are you over the age of 18?</legend>
                        <div class="radio-inputs-container">
                            <div class="input-one-container">
                                <input type="radio" name="18_radio" id="18_yes" value="yes">
                                <label class="radio-label" for="18_yes">Yes</label>
                            </div>
                            <div class="input-one-container">
                                <input type="radio" name="18_radio" id="18_no" value="no" checked>
                                <label class="radio-label" for="18_no">No</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="form-component-container radio-inputs">
                    <fieldset class="input-radio-container">
                        <legend>Are you a citizen of the U.S. or Otherwise authorized to work in the U.S. on an unrestricted basis?</legend>
                        <div class="radio-inputs-container">
                            <div class="input-one-container">
                                <input type="radio" name="us-citizen_radio" id="us-citizen_yes" value="yes">
                                <label class="radio-label" for="us-citizen_yes">Yes</label>
                            </div>
                            <div class="input-one-container">
                                <input type="radio" name="us-citizen_radio" id="us-citizen_no" value="no" checked>
                                <label class="radio-label" for="us-citizen_no">No</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="form-component-container radio-inputs" data-parent-container="felony" data-felony-container>
                    <fieldset class="input-radio-container">
                        <legend>Have you ever been charged with a Felony?</legend>
                        <div class="radio-inputs-container">
                            <div class="input-one-container">
                                <input type="radio" name="felony_radio" id="felony_yes" value="yes" data-dynamic-radio="felony">
                                <label class="radio-label" for="felony_yes">Yes</label>
                            </div>
                            <div class="input-one-container">
                                <input type="radio" name="felony_radio" id="felony_no" value="no" data-dynamic-radio="felony" checked>
                                <label class="radio-label" for="felony_no">No</label>
                            </div>
                        </div>
                        <div class="radio-inputs-container extra-input has-required hidden">
                            <div class="input-half-container">
                                <label for="conviction">Describe conviction conditions:</label>
                                <textarea name="conviction" id="conviction" rows="5" maxlength="100" data-required></textarea>
                            </div>
                            <p class="please-note"><span class="please-note">Please note:</span> Disclosure of criminal history is required due to job-specific regulations. 
                                Failure to provide accurate information may affect your eligibility for employment.
                            </p>
                        </div>
                    </fieldset>
                </div>
            </section>
            <section class="driving-form-section hidden" data-driving-section>
                <h2 class="form-title">Driving Information</h2>
                <div class="form-component-container radio-inputs" data-parent-container="endorsement">
                    <div class="form-component-container">
                        <fieldset class="input-radio-container">
                            <legend>Do you have any additional driving endorsements?</legend>
                            <div class="radio-inputs-container">
                                <div class="input-one-container">
                                    <input type="radio" name="endorsements_radio" id="endorsements_yes" value="yes" data-dynamic-radio="endorsement">
                                    <label class="radio-label" for="endorsements_yes">Yes</label>
                                </div>
                                <div class="input-one-container">
                                    <input type="radio" name="endorsements_radio" id="endorsements_no" value="no" data-dynamic-radio="endorsement" checked>
                                    <label class="radio-label" for="endorsements_no">No</label>
                                </div>
                            </div>
                            <div class="radio-inputs-container extra-input has-required hidden">
                                <div class="input-half-container">
                                    <label for="endorsement">Please list any additional driving endorsements:</label>
                                    <textarea name="endorsement" id="endorsement" rows="5" maxlength="100" data-required></textarea>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="form-component-container radio-inputs" data-parent-container="traffic-accident">
                    <div class="form-component-container">
                        <fieldset class="input-radio-container">
                            <legend>Have you had a traffic accident in the past 3 years?</legend>
                            <div class="radio-inputs-container">
                                <div class="input-one-container">
                                    <input type="radio" name="traffic-accidents_radio" id="traffic-accidents_yes" value="yes" data-dynamic-radio="traffic-accident">
                                    <label class="radio-label" for="traffic-accidents_yes">Yes</label>
                                </div>
                                <div class="input-one-container">
                                    <input type="radio" name="traffic-accidents_radio" id="traffic-accidents_no" value="no" data-dynamic-radio="traffic-accident" checked>
                                    <label class="radio-label" for="traffic-accidents_no">No</label>
                                </div>
                            </div>
                            <div class="radio-inputs-container extra-input has-required hidden">
                                <div class="input-half-container">
                                    <label for="traffic-accident">Please explain the traffic accident(s):</label>
                                    <textarea name="traffic-accident" id="traffic-accident" rows="5" maxlength="100" data-required></textarea>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="form-component-container radio-inputs" data-parent-container="traffic-conviction">
                    <div class="form-component-container">
                        <fieldset class="input-radio-container">
                            <legend>Have you had any traffic convictions in the past 3 years (besides parking violations)?</legend>
                            <div class="radio-inputs-container">
                                <div class="input-one-container">
                                    <input type="radio" name="traffic-convictions_radio" id="traffic-convictions_yes" value="yes" data-dynamic-radio="traffic-conviction">
                                    <label class="radio-label" for="traffic-convictions_yes">Yes</label>
                                </div>
                                <div class="input-one-container">
                                    <input type="radio" name="traffic-convictions_radio" id="traffic-convictions_no" value="no" data-dynamic-radio="traffic-conviction" checked>
                                    <label class="radio-label" for="traffic-convictions_no">No</label>
                                </div>
                            </div>
                            <div class="radio-inputs-container extra-input has-required hidden">
                                <div class="input-half-container">
                                    <label for="traffic-conviction">Please explain the traffic conviction(s):</label>
                                    <textarea name="traffic-conviction" id="traffic-conviction" rows="5" maxlength="100" data-required></textarea>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="form-component-container radio-inputs upload-input" data-parent-container="mvr">
                    <div class="form-component-container">
                        <fieldset class="input-radio-container">
                            <legend>Do you have a recent Motor Vehicle Record (MVR) from within the last 30 days?</legend>
                            <div class="radio-inputs-container">
                                <div class="input-one-container">
                                    <input type="radio" name="mvr_radio" id="mvr_yes" value="yes" data-dynamic-radio="mvr">
                                    <label class="radio-label" for="mvr_yes">Yes</label>
                                </div>
                                <div class="input-one-container">
                                    <input type="radio" name="mvr_radio" id="mvr_no" value="no" data-dynamic-radio="mvr" checked>
                                    <label class="radio-label" for="mvr_no">No</label>
                                </div>
                            </div>
                            <p class="please-note mvr" data-please-note="mvr">
                                <span class="please-note">Please Note:</span>
                                A Motor Vehicle Record (MVR) from the last 30 days is required for this position. A non-certified MVR showing a 
                                7-year driving history can be obtained from the DMV at 827 W 4th St, Pueblo, CO 81003, or online using the 
                                <a href="https://mydmv.colorado.gov/e-Services/?Link=DriverRecord" target="_blank" rel="noreferrer noopener">DMV - 
                                    MVR Online Form</a>. Submit the MVR with your application or bring it to our office at 612 S. Union Ave., Pueblo, 
                                    CO 81004 to proceed with the application process.
                            </p>
                            <div class="radio-inputs-container extra-input has-note hidden">
                                <div class="input-form-container">
                                    <label>Attach Your MVR (in PDF format)</label>
                                    <input type="file" name="mvr" id="mvr" accept="application/pdf" data-file-input-btn="mvr" hidden>
                                    <label class="choose-file-label" for="mvr" tabindex="0">
                                        <div class="drop-box" data-file-upload="mvr"></div>
                                        <span class="choose-file-text">Choose File</span>
                                        <span class="choose-file-text">(Drag and Drop)</span>
                                    </label>
                                    <div class="upload-description hidden" data-upload-description="mvr">
                                        <span class="upload-name" data-upload-name></span>
                                        <span class="upload-size" data-upload-size></span>
                                        <button type="button" class="upload-delete-btn" data-upload-delete-btn="mvr">
                                            <div class="icon-wrapper">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                                </svg>
                                            </div>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="form-component-container upload-input">
                    <div class="input-form-container">
                        <label>Attach Your Driver's License</label>
                        <input type="file" name="drivers-license" id="drivers-license" hidden data-file-input-btn="license">
                        <label class="choose-file-label" for="drivers-license" tabindex="0">
                            <div class="drop-box" data-file-upload="license"></div>
                            <span class="choose-file-text">Choose File</span>
                            <span class="choose-file-text">(Drag and Drop)</span>
                        </label>
                        <div class="upload-description  hidden" data-upload-description="license">
                            <span class="upload-name" data-upload-name></span>
                            <span class="upload-size" data-upload-size></span>
                            <button type="button" class="upload-delete-btn" data-upload-delete-btn="license">
                                <div class="icon-wrapper">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                    </svg>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>
            </section>
            <section class="work-form-section">
                <h2 class="form-title">Work Information</h2>
                <div class="form-component-container selector">
                    <label for="how-did-you-hear">How did you learn about us?</label>
                    <div class="select-wrapper">
                        <select name="how-did-you-hear" id="how-did-you-hear" data-select onfocus='if(window.innerWidth > 650) { this.size=5; this.parentNode.classList.add("hide-icon") }' onblur='this.size=1; this.parentNode.classList.remove("hide-icon")' onchange='this.size=1; this.blur();'>
                            <option value="indeed" selected>Indeed</option>
                            <option value="facebook">Facebook</option>
                            <option value="word-of-mouth">Word of Mouth</option>
                            <option value="website">Your Website</option>
                            <option value="email">Email</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>
                <div class="form-component-container radio-inputs">
                    <fieldset class="input-radio-container">
                        <legend>Have you ever worked for Golden Gate Manor Inc. before?</legend>
                        <div class="radio-inputs-container">
                            <div class="input-one-container">
                                <input type="radio" name="worked-ggm_radio" id="worked-ggm_yes" value="yes">
                                <label class="radio-label" class="radio-label" for="worked-ggm_yes">Yes</label>
                            </div>
                            <div class="input-one-container">
                                <input type="radio" name="worked-ggm_radio" id="worked-ggm_no" value="no" checked>
                                <label class="radio-label" class="radio-label" for="worked-ggm_no">No</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="form-component-container radio-inputs">
                    <fieldset class="input-radio-container">
                        <legend>What kind of employment are you looking for?</legend>
                        <div class="radio-inputs-container">
                            <div class="input-one-container">
                                <input type="radio" name="employment-type_radio" id="employment-type_full-time" value="full-time" checked>
                                <label class="radio-label" for="employment-type_full-time">Full-Time</label>
                            </div>
                            <div class="input-one-container">
                                <input type="radio" name="employment-type_radio" id="employment-type_part-time" value="part-time">
                                <label class="radio-label" for="employment-type_part-time">Part-Time</label>
                            </div>
                        </div>
                        <div class="radio-inputs-container extra-input">
                            <div class="input-half-container">
                                <label for="availability">Specify Availability (days and hours if part-time):</label>
                                <textarea name="availability" id="availability" rows="5" maxlength="100" required></textarea>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="form-component-container radio-inputs">
                    <fieldset class="input-radio-container">
                        <legend>Are you willing to work overtime as required?</legend>
                        <div class="radio-inputs-container">
                            <div class="input-one-container">
                                <input type="radio" name="overtime_radio" id="overtime_yes" value="yes">
                                <label class="radio-label" for="overtime_yes">Yes</label>
                            </div>
                            <div class="input-one-container">
                                <input type="radio" name="overtime_radio" id="overtime_no" value="no" checked>
                                <label class="radio-label" for="overtime_no">No</label>
                            </div>
                        </div>
                    </fieldset>
                </div>
                <div class="form-component-container one-input">
                    <div class="input-half-container">
                        <label for="pay-rate">What is your preferable pay rate? (Hourly)</label>
                        <input type="text" name="pay-rate" id="pay-rate">
                    </div>
                </div>
                <div class="form-component-container one-input date-field">
                    <div class="input-half-container">
                        <fieldset class="date-input-container">
                            <legend>If your application is considered favorably, what date would you be available to start work?</legend>
                            <input type="date" name="start-date" id="start-date">
                        </fieldset>
                    </div>
                </div>
                <div class="form-component-container upload-input">
                    <div class="input-form-container">
                        <label>Attach Your Resume</label>
                        <input type="file" name="resume" id="resume" hidden data-file-input-btn="resume">
                        <label class="choose-file-label" for="resume" tabindex="0">
                            <div class="drop-box" data-file-upload="resume"></div>
                            <span class="choose-file-text">Choose File</span>
                            <span class="choose-file-text">(Drag and Drop)</span>
                        </label>
                        <div class="upload-description hidden" data-upload-description="resume">
                            <span class="upload-name" data-upload-name></span>
                            <span class="upload-size" data-upload-size></span>
                            <button type="button" class="upload-delete-btn" data-upload-delete-btn="resume">
                                <div class="icon-wrapper">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0"/>
                                    </svg>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>
            </section>
            <button class="primary-button application-page" type="submit">Submit Application</button>
            <div class="submission-message" data-submission-message></div>
            <div class="hidden-form-components">
                <input type="hidden" name="date" data-form-date>
                <input type="hidden" name="full-position-name" data-full-position-name>
            </div>
        </form>
    </div>
</section>
